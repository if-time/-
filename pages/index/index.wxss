  margin-bottom: 20rpx;
}

button {
  margin: 0 10rpx;
  width: 100%;
}

.top-bar {
  width: 700rpx;
  margin: 20rpx auto;
  height: 80rpx;
  display: flex;
  background: #fff;
  border-radius: 10rpx;
  /* border: 1px solid #ddd; */
