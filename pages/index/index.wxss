.view {
  width: 100%;
  height: 100%;
}

.window {
  width: 100%;
  height: 100%;
  text-align: center;
}

.window-2 {
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
}

.cover-1 {
  width: 100%;
  /* height: 60%; */
  align-items: center;
  margin-top: 300rpx;
  justify-content: center;
  flex-direction: column;
}

.cover-9 {
  width: 728rpx;
  height: 60%;
  margin: 0 10rpx;
  /* border: 2rpx solid; */
